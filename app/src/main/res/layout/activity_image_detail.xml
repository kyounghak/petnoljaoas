<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 툴바 -->
    <include layout="@layout/view_toolbar_standard" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.chaigene.petnolja.ui.view.ExtendedViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_grey_900" />

        <com.itsronald.widget.ViewPagerIndicator
            android:id="@+id/view_pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:gravity="center_vertical"
            app:dotPadding="6dp"
            app:dotRadius="4dp"
            app:viewPagerId="@+id/view_pager" />

    </FrameLayout>

</LinearLayout>