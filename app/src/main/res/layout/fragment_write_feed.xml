<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_200">

    <!-- TODO: 최상단에 이미지 5개가 들어간다 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/material_grey_100"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerInside"
                    tools:src="@drawable/feed_photo_23" />

                <ImageView
                    android:id="@+id/photo_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/material_grey_100"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerInside"
                    tools:src="@drawable/feed_photo_24" />

                <ImageView
                    android:id="@+id/photo_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/material_grey_100"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerInside"
                    tools:src="@drawable/feed_photo_23" />

                <ImageView
                    android:id="@+id/photo_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/material_grey_100"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerInside"
                    tools:src="@drawable/feed_photo_24" />

                <ImageView
                    android:id="@+id/photo_5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/material_grey_100"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerInside"
                    tools:src="@drawable/feed_photo_23" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:paddingBottom="14dp"
            android:paddingEnd="17dp"
            android:paddingStart="17dp"
            android:paddingTop="14dp">

            <EditText
                android:id="@+id/content_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/white"
                android:gravity="top"
                android:hint="설명 쓰기"
                android:minHeight="186dp"
                android:textSize="13sp"
                tools:hint="Write description" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/trade_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:background="@android:color/white"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_trade"
                    android:tint="@color/material_grey_500" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:maxLines="1"
                    android:minHeight="30dp"
                    android:text="판매 여부"
                    android:textSize="13sp"
                    tools:text="Talent" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/trade_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>