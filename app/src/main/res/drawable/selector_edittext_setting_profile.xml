<?xml version="1.0" encoding="utf-8"?><!-- Source: https://github.com/frogermcs/InstaMaterial/blob/master/app/src/main/res/drawable/btn_feed_action.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_grey_200" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <inset>
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="6dp"
                    android:bottomRightRadius="6dp"
                    android:topLeftRadius="6dp"
                    android:topRightRadius="6dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/material_grey_200" />
                <solid android:color="@android:color/white" />
            </shape>
        </inset>
    </item>
</selector>